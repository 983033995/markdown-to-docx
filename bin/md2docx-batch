#!/bin/bash

# Markdown to DOCX 批量转换 CLI 工具

# 获取脚本真实路径
get_install_dir() {
    local source="${BASH_SOURCE[0]}"
    while [ -h "$source" ]; do
        local dir="$(cd -P "$(dirname "$source")" && pwd)"
        source="$(readlink "$source")"
        [[ $source != /* ]] && source="$dir/$source"
    done
    local dir="$(cd -P "$(dirname "$source")" && pwd)"
    echo "$(dirname "$dir")"
}

INSTALL_DIR="$(get_install_dir)"
BATCH_SCRIPT="$INSTALL_DIR/scripts/batch_convert.sh"

# 检查批量转换脚本是否存在
if [ ! -f "$BATCH_SCRIPT" ]; then
    echo "错误: 未找到批量转换脚本"
    echo "期望路径: $BATCH_SCRIPT"
    exit 1
fi

# 调用批量转换脚本
exec "$BATCH_SCRIPT" "$@"
